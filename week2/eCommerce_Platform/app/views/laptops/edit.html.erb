<body>
  <header>
    <h1>Editing Laptop</h1>
  </header>

  <%= form_for :laptop, url: laptop_path(@laptop), method: :patch do |f| %> 
  <!--@laptop y :laptop es lo mismo-->
  <!--@ method: :patch para que use el mismo metodo-->

  <p class="stylepurple">
    <%= f.label :brand %><br>
    <%= f.text_field :brand %>
  </p>

  <p class="stylepurple">
    <%= f.label :model %><br>
    <%= f.text_area :model %>
  </p>

  <p class="stylepurple">
    <%= f.label :processor_brand %><br>
    <%= f.text_area :processor_brand %>
  </p>
  
  <p class="stylepurple">
    <%= f.label :ram_size %><br>
    <%= f.text_area :ram_size %>
  </p>

  <p class="stylepurple">
    <%= f.label :price %><br>
    <%= f.text_area :price %>
  </p>

  <p>
    <%= f.submit %>
  </p>

  <% end %>

  <p>
    <%= link_to 'Back', laptops_path%>
  </p>
</body>